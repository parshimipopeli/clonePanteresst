{% extends 'base.html.twig' %}



{% block title 'Bienvenue sur Panterest' %}

{% block body %}

{# length methode pour donner le nombre de pins #}
<h1>{{ pluralize(pins|length, 'pin' )}}</h1>

{% for pin in pins %}
    <article>
        <h2><a href="{{ path('app_pins_show', {id: pin.id}) }}">{{ pin.title}}</a></h2>
        <p>{{ pin.description | striptags | slice(0, 30) | raw}} ...</p> 
        <p>Pin crée il y à {{ pin.createdAt|ago}}</p>
    </article>
{% endfor %}


{% endblock %}
